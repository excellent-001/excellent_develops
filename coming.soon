<!doctype html>
<html lang="en">
<head>
<meta charset="utf-8" />
<meta name="viewport" content="width=device-width, initial-scale=1" />
<title>Coming Soon ‚Ä¢ Excellent_Develops</title>
<style>
  :root{
    --bg1:#0d0b16; --bg2:#161028; --card:#1f1636; --text:#f3ecff; --muted:#cbbcff;
    --accent:#a36cff; --ring:rgba(163,108,255,.35);
  }
  *{box-sizing:border-box} html,body{height:100%}
  body{
    margin:0; font-family:Inter, system-ui, Segoe UI, Roboto, Arial, sans-serif; color:var(--text);
    background: radial-gradient(1200px 700px at -10% -10%, #3a1a73 0%, transparent 60%),
                radial-gradient(1000px 600px at 110% 110%, #5c1d91 0%, transparent 60%),
                linear-gradient(180deg,var(--bg1),var(--bg2));
    min-height:100%;
  }
  header{display:flex; justify-content:space-between; align-items:center; padding:18px}
  .btn-small{padding:8px 12px; border-radius:10px; border:none; cursor:pointer; font-weight:700;
             background:#2a2046; color:#e8ddff}
  .wrap{max-width:900px; margin:0 auto; padding:10px 18px 50px; display:grid; gap:18px}
  .hero{
    text-align:center; padding:30px 18px; border-radius:18px;
    background:linear-gradient(180deg,rgba(255,255,255,.05),rgba(255,255,255,.03));
    border:1px solid rgba(255,255,255,.10);
    box-shadow:0 12px 40px rgba(0,0,0,.4);
  }
  .title{font-size:40px; margin:6px 0 8px; text-shadow:0 0 14px rgba(163,108,255,.35)}
  .subtitle{margin:0; color:var(--muted)}
  .links{display:flex; gap:12px; justify-content:center; flex-wrap:wrap; margin-top:12px}
  .link{font-size:14px; padding:8px 12px; border-radius:12px; background:#2a2046; color:#e8ddff; text-decoration:none}

  .card{
    background:linear-gradient(180deg,rgba(255,255,255,.05),rgba(255,255,255,.03));
    border:1px solid rgba(255,255,255,.10);
    border-radius:18px; padding:18px; box-shadow:0 12px 40px rgba(0,0,0,.4);
  }
  .grid2{display:grid; grid-template-columns:1fr 1fr; gap:16px}
  @media (max-width:820px){ .grid2{grid-template-columns:1fr} }
  .field{display:grid; gap:6px}
  label{font-size:13px; color:var(--muted)}
  input, textarea{
    width:100%; padding:12px; border-radius:12px; border:1px solid rgba(255,255,255,.14);
    background:#1b1430; color:var(--text); outline:none; font-size:15px;
  }
  textarea{min-height:120px; resize:vertical}
  input:focus,textarea:focus{border-color:var(--accent); box-shadow:0 0 0 4px var(--ring)}
  .btn{
    padding:12px 16px; border-radius:12px; border:none; cursor:pointer; font-weight:900; letter-spacing:.2px;
    color:#140a1f; background:linear-gradient(90deg,#a36cff,#e29bff);
    box-shadow:0 12px 26px rgba(163,108,255,.35);
  }
  .error{color:#ff6b6b; font-size:13px; min-height:18px; margin-top:6px}
  footer{margin:18px 0 12px; text-align:center; color:#b9a8ff; font-size:12px}

  /* Popup */
  .overlay{position:fixed; inset:0; background:rgba(0,0,0,.6); display:none; place-items:center}
  .popup{
    width:90%; max-width:420px; text-align:center; padding:22px; border-radius:16px;
    background:#241a3b; border:1px solid rgba(255,255,255,.1); box-shadow:0 20px 60px rgba(0,0,0,.6);
  }
  .emoji{font-size:46px; margin:6px 0}
</style>
</head>
<body>
  <header>
    <h3 style="margin:0">Project Status</h3>
    <button class="btn-small" onclick="logout()">Sign out</button>
  </header>

  <main class="wrap">
    <section class="hero">
      <div class="title">üöß Coming Soon</div>
      <p class="subtitle">This project page is under construction. In the meantime, you can reach me here:</p>
      <div class="links">
        <a class="link" href="https://www.facebook.com/EminiExcellent" target="_blank" rel="noopener">Facebook</a>
        <a class="link" href="https://wa.me/2349046463436" target="_blank" rel="noopener">WhatsApp</a>
        <a class="link" href="https://x.com/TheOlodo_Nation" target="_blank" rel="noopener">X (Twitter)</a>
        <a class="link" href="https://www.linkedin.com/in/quareeb-jagun-448262310" target="_blank" rel="noopener">LinkedIn</a>
      </div>
    </section>

    <section class="card">
      <h3 style="margin:4px 0 10px">Send Feedback</h3>
      <form id="fbForm">
        <div class="grid2">
          <div class="field">
            <label for="fb-name">Full Name</label>
            <input id="fb-name" type="text" placeholder="Your name" required />
          </div>
          <div class="field">
            <label for="fb-email">Email</label>
            <input id="fb-email" type="email" placeholder="you@email.com" required />
          </div>
          <div class="field">
            <label for="fb-phone">Phone</label>
            <input id="fb-phone" type="tel" placeholder="+234..." required />
          </div>
          <div class="field">
            <label for="fb-msg">Message</label>
            <textarea id="fb-msg" placeholder="Your feedback..."></textarea>
          </div>
        </div>
        <div class="error" id="fb-error"></div>
        <button class="btn" type="submit">Submit Feedback</button>
      </form>
    </section>
  </main>

  <footer>
    Contact: quareebalabi22@gmail.com ¬∑ +2349046463436 ¬∑ +2348142370183<br/>
    Created by Excellent Global Conceptional 2025. Copyright ‚Äî All rights reserved.
  </footer>

  <!-- Thank-you Popup -->
  <div class="overlay" id="popup">
    <div class="popup">
      <div class="emoji">üëç</div>
      <h3 style="margin:6px 0 10px">Thank you for your feedback!</h3>
      <p style="color:#d8ccff; margin:0 0 14px">We appreciate you.</p>
      <button class="btn" onclick="window.location.href='portfolio.html'">Return to Homepage</button>
    </div>
  </div>

  <script type="module">
    import { initializeApp } from "https://www.gstatic.com/firebasejs/10.12.5/firebase-app.js";
    import { getAuth, onAuthStateChanged, signOut } from "https://www.gstatic.com/firebasejs/10.12.5/firebase-auth.js";
    import { getFirestore, collection, addDoc, serverTimestamp } from "https://www.gstatic.com/firebasejs/10.12.5/firebase-firestore.js";

    const firebaseConfig = {
      apiKey: "AIzaSyDoTlLIlOyoYiTZLQmzVcDro-cw9TCU9qI",
      authDomain: "excellent-d056e.firebaseapp.com",
      projectId: "excellent-d056e",
      storageBucket: "excellent-d056e.firebasestorage.app",
      messagingSenderId: "629984941607",
      appId: "1:629984941607:web:3d7fc2478f555d45a0e002",
      measurementId: "G-G3RCTDSY27"
    };
    const app = initializeApp(firebaseConfig);
    const auth = getAuth(app);
    const db   = getFirestore(app);

    onAuthStateChanged(auth, (user)=>{ if(!user) window.location.replace('login.html'); });

    window.logout = async ()=>{ try{ await signOut(auth);}catch(e){} finally{ window.location.href='login.html'; }};

    // 60 min inactivity logout
    let timer; const reset=()=>{ clearTimeout(timer); timer=setTimeout(()=>window.logout(), 60*60*1000); };
    ['click','mousemove','keydown','scroll','touchstart'].forEach(evt=>window.addEventListener(evt, reset));
    reset();

    // Feedback submit
    const $ = (id)=> document.getElementById(id);
    const showErr = (msg)=> $('fb-error').textContent = msg||'';
    $('fbForm').addEventListener('submit', async (e)=>{
      e.preventDefault(); showErr('');
      const name  = $('fb-name').value.trim();
      const email = $('fb-email').value.trim();
      const phone = $('fb-phone').value.trim();
      const msg   = $('fb-msg').value.trim();
      if(!name || !email || !phone){ showErr('Please fill all required fields.'); return; }
      try{
        await addDoc(collection(db,'feedback'), { name, email, phone, message:msg, createdAt: serverTimestamp() });
        $('popup').style.display = 'grid'; // show thank-you
        e.target.reset();
      }catch(err){
        showErr('Could not send feedback. Please try again.');
      }
    });
  </script>
</body>
</html>
